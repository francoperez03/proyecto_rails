

<h1>Categorias</h1>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @admin_categories.each do |admin_category| %>
      <tr>
        <td><%= admin_category.nombre %></td>
        <td><%= link_to 'Mostrar', admin_category %></td>
        <td><%= link_to 'Editar', edit_admin_category_path(admin_category) %></td>
        <td><%= link_to 'Eliminar', admin_category, method: :delete, data: { confirm: 'Esta seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Agregar categoria', new_admin_category_path %>
