
<h1>Las marcas</h1>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @admin_marcas.each do |admin_marca| %>
      <tr>
        <td><%= admin_marca.nombre %></td>
        <td><%= link_to 'Mostrar', admin_marca %></td>
        <td><%= link_to 'Editar', edit_admin_marca_path(admin_marca) %></td>
        <td><%= link_to 'Eliminar', admin_marca, method: :delete, data: { confirm: 'Esta seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Agregar marca', new_admin_marca_path %>
