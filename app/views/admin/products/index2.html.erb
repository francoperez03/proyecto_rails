
<h1>Todos los productos</h1>

<table>
  <thead>
    <tr>
      <th>Image</th>
      <th><%= link_to "Codigo", admin_products_path(order: 'codigo') %></th>
      <th>Precio</th>
      <th>Description</th>
      <th>Marca</th>
      <th>Categoria</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @admin_products.order(:precio) %>
    <% @admin_products.each do |admin_product| %>
      <tr>
        <td><%= image_tag admin_product.image.url(:main) %></td>
        <td><%= admin_product.codigo %></td>
        <td><%= admin_product.precio %></td>
        <td><%= admin_product.description %></td>
        <td><%= admin_product.marca.nombre %></td>
        <td><%= admin_product.category.nombre %></td>
        
        <td><%= link_to 'Mostrar', admin_product %></td>
        <td><%= link_to 'Editar', edit_admin_product_path(admin_product) %></td>
        <td><%= link_to 'Eliminar', admin_product, method: :delete, data: { confirm: 'Esta seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nuevo producto', new_admin_product_path %>
