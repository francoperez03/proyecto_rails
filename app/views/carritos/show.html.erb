<h2>Tu carrito</h2>
<p>
	<%=@products.marca.nombre%>
</p>


<%= form_for(@agregar_carrito) do |f| %>

  <div class="field">
    <%= f.hidden_field :user_id, value: current_user.id %>
  </div>

  <div class="field">
    <%= f.hidden_field :product_id, value: @products.id %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>