<div class="row column text-center">
<h2>Nuestros ultimos productos!</h2>
<hr>

<div class="row small-up-2 large-up-4">
<% @latest_products.each do |product| %>
  <div class="column">
  	
    <%= image_tag product.image.url(:main) %>
    <h5><%= product.category.nombre %></h5>
    <h5><%= product.marca.nombre %></h5>
    <p><%= product.description %><br>
    <%= product.precio %></p>
    <% if current_user %>
    <a href="#" class="button expanded">Comprar</a>
    <% end %>
  </div>
<% end %>



</div>
<hr>