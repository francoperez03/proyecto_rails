
<h1>Listing Admin Marcas</h1>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @admin_marcas.each do |admin_marca| %>
      <tr>
        <td><%= admin_marca.nombre %></td>
        <td><%= link_to 'Show', admin_marca %></td>
        <td><%= link_to 'Edit', edit_admin_marca_path(admin_marca) %></td>
        <td><%= link_to 'Destroy', admin_marca, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

